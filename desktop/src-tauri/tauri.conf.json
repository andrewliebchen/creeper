{
  "productName": "Creeper",
  "version": "0.1.0",
  "identifier": "com.creeper.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Creeper",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:5173"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability with notification permissions",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "shell:allow-open",
            "notification:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

