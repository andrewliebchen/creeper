{
  "productName": "Creeper",
  "version": "0.1.0",
  "identifier": "com.creeper.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Creeper",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:5173"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

